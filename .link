#! /bin/bash
set -e

set -o allexport
. ./app/profile.conf
. ./app/app.conf
set +o allexport

[ -d "${BIN_DIR}" ] ||
  mkdir -p "${BIN_DIR}"
ln -sf "${APP_DIR}/app/${APP_PREFIX}-"* "${BIN_DIR}/"

[ -d "${PROFILE_DIR}" ] ||
  mkdir -p "${PROFILE_DIR}"
ln -sf "${APP_DIR}/app/profile.conf" "${PROFILE_DIR}/${APP_NAME}.sh"

[ -d "${CONF_DIR}/${APP_NAME}" ] ||
  mkdir -p "${CONF_DIR}/${APP_NAME}"
ln -sf "${APP_DIR}/app/app.conf" "${CONF_DIR}/${APP_NAME}/"
ln -sf "${APP_DIR}/app/user.conf" "${CONF_DIR}/${APP_NAME}/"
